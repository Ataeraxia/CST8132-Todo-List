<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.GuiController">
   <children>
      <MenuBar prefHeight="32.0" prefWidth="758.0">
        <menus>
          <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu fx:id="editMenu" mnemonicParsing="false" text="Edit">
            <items>
                  <MenuItem fx:id="saveMenu" mnemonicParsing="false" onAction="#saveTasks" text="Save to file..." />
                  <MenuItem fx:id="loadMenu" mnemonicParsing="false" onAction="#loadTasks" text="Load from file..." />
              <MenuItem fx:id="deleteMenu" mnemonicParsing="false" onAction="#removeTask" text="Delete item" />
            </items>
          </Menu>
          <Menu fx:id="helpMenu" mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <SplitPane layoutY="54.0" orientation="VERTICAL">
         <items>
            <AnchorPane layoutX="14.0" layoutY="86.0" prefHeight="249.0" prefWidth="735.0">
               <children>
                  <TextField fx:id="descriptionTextField" layoutX="296.0" layoutY="-1.0" prefHeight="32.0" prefWidth="432.0" />
                  <Button fx:id="addButton" mnemonicParsing="false" onAction="#addTask" text="Add a task" />
                  <ChoiceBox fx:id="priorityChoiceBox" layoutX="122.0" prefWidth="150.0" />
                  <TableView fx:id="tableView" layoutY="31.0" prefHeight="218.0" prefWidth="727.0" />
               </children>
            </AnchorPane>
         </items>
      </SplitPane>
   </children>
</AnchorPane>
